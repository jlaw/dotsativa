#!/bin/sh

# Show wifi ï‡« and percent strength or ï™– if none.
# Show ïœ€ if connected to ethernet or ïœ if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ï – Internet module" "\- Click to connect
ï™–: no wifi connection
ï‡«: wifi connection with quality
ïœ: no ethernet
ïœ€: ethernet working
ðŸ”’: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ï‡« OFF " ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ï‡« " int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

printf "%s%s%s\n" "$wifiicon" "$(sed "s/down/ïœ/;s/up/ïœ€/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ðŸ”’/" /sys/class/net/tun*/operstate 2>/dev/null)"
